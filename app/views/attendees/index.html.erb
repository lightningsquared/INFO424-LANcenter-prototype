<h1>Listing attendees</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Date of birth</th>
    <th>Attendee type</th>
    <th>Handle</th>
    <th>Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @attendees.each do |attendee| %>
  <tr>
    <td><%= attendee.first_name %></td>
    <td><%= attendee.last_name %></td>
    <td><%= attendee.email %></td>
    <td><%= attendee.date_of_birth %></td>
    <td><%= attendee.attendee_type %></td>
    <td><%= attendee.handle %></td>
    <td><%= attendee.event_id %></td>
    <td><%= link_to 'Show', attendee %></td>
    <td><%= link_to 'Edit', edit_attendee_path(attendee) %></td>
    <td><%= link_to 'Destroy', attendee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

